<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
      integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/4901497cb9.js"
      crossorigin="anonymous"
    ></script>

    <link rel="stylesheet" href="../stylesheets/style.css" />
    <link rel="stylesheet" href="../stylesheets/queries.css" />
    <title>WeatherApp</title>
  </head>
  <body>
    <!-- HEADER -->
    <nav class="header navbar navbar-light bg-dark">
      Weather App
      <a class="logout" href="/logout"><button class="btn--update">Logout</button></a>
    </nav>

    <!-- GRID -->

    <div class="container">
      <div class="grid--2cols">
        <div class="form-section">
          <form class="add-form"  action="/weather" method="post">
            <input
              type="text"
              placeholder="enter city name"
              name="city"
              class="add-city"
            />
            <button type="submit" class="btn--form">Add</button>
          </form>
          <p class="error-message <%= renderErrorMessage? "":"hidden"%>">Location not found</p>
        </div>
        <div class="map-section">
          <img src="../images/map.png" class="card-img-top" alt="bike picture" />
        </div>
        <div class="weather-section">
          <div class="btn-box">
            <a href="/weather/update"><button class="btn--update">Update Weather <i class="fa-solid fa-arrows-rotate"></i></button></a>
          </div>
          <!-- <h2 class="update-title">
            Update Cities <i class="fa-solid fa-arrows-rotate"></i>
          </h2> -->
          <div class="city-cards">

            <%
            if (cityList.length >0){
              %>

            <%
            for(var i=0; i<cityList.length; i++){
              %>

              <div class="city-card">
                <div class="city-title-box">
                  <p class="city-title"><%= cityList[i].name %></p>
                </div>
                <div class="meteo">
                  <p class="meteo-text"><%= cityList[i].description %></p>
                  <img
                    src="<%= cityList[i].urlImage %>"
                    class="img-weather"
                    alt="Weather picture"
                  />
                  <p class="max-temp"><%= cityList[i].tmin %>°C</p>
                  <p class="min-temp"><%= cityList[i].tmax %>°C</p>
                </div>
                <div>
                  <a href="/weather?delete=<%= cityList[i]._id%>">
                    <button class="delete-btn">
                    <i class="fa-regular fa-circle-xmark"></i>
                  </button>
                </a>
                </div>
              </div>


              <%
            }
            %>

            <%
          } else{
          %>

          <p class="empty-list-message">No cities in the list.</p>

          <%
          }
          %>

        </div>

        <!-- <div class="btn-box">
          <a href="/weather/update"><button class="btn--update">Update Weather <i class="fa-solid fa-arrows-rotate"></i></button></a>
        </div> -->

      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
      integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
      integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
